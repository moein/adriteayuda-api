rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /contacts/{contactId}/{documents=**} {
    	allow read, update, delete: if get(/databases/$(database)/documents/shops/$(resource.data.shopId)/members/$(request.auth.uid)).data.role == "owner"
      allow create: if get(/databases/$(database)/documents/shops/$(request.resource.data.shopId)/members/$(request.auth.uid)).data.role == "owner"
    }
    match /shops/{shopId}/{documents=**} {
    	allow read: if get(/databases/$(database)/documents/shops/$(shopId)/members/$(request.auth.uid)).data.role == "owner"
      allow write: if false
    }
    match /profiles/{userId}/{documents=**} {
    	allow read: if request.auth.uid == userId
      allow write: if false
    }
    match /shop_requests/{requestId}/{documents=**} {
    	allow read: if get(/databases/$(database)/documents/shops/$(resource.data.shopId)/members/$(request.auth.uid)).data.role == "owner"
      allow create: if get(/databases/$(database)/documents/shops/$(request.resource.data.shopId)/members/$(request.auth.uid)).data.role == "owner"
      allow update, delete: if false
    }
    match /notifications/{token}/{documents=**} {
        allow get: if true
        allow list: if false
    	allow write: if false
    }
    match /notification_debug/{token}/{document=**} {
        allow read: if false
        allow write: if false
    }
  }
}
